rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Profile Images - users can upload their own avatar, everyone can read
    match /profileImages/{userId}/{allPaths=**} {
      // Allow users to upload/update their own profile images
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow anyone (authenticated or not) to read profile images
      // This ensures avatars are visible across all devices and users
      allow read: if true;
    }

    // Default rule - deny all access unless explicitly allowed above
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
